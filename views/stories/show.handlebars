<div class="row">
    <div class="col s12 m8">
        <h3>{{stories.title}}</h3>
        <div class="card-story">
            <div class="card-content">
                <span class="card-title">
                    <em>{{formatDate stories.date}}</em>
                </span>
                <p>{{{stories.body}}}</p>
            </div>
        </div>
        {{#if allowComments}}
        <div class="card-story">
            <div class="card-content">
                <span class="card-title">
                    <em>Comments</em>
                </span>
                <p></p>
            </div>
        </div>
        {{/if}}
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{stories.user.firstName}} {{stories.user.lastName}}</span>
                <img src="{{stories.user.image}}" alt="Author" class="responsive-img circle">
            </div>
            <div class="card-action">
                <a class="center-align" href="/stories/user/{{stories.user.id}}">More from {{stories.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>