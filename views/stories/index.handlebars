<h3>Stories</h3>
<div class="row">
    {{# each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{!-- using user.id and not story.user.id because we are inside of a loop and ../user_id to get the global user not the story
                user like above. --}} {{#if user}} {{{editIcon user.id ../user.id id }}} {{/if}}
            </div>
            <div class="card-content">
                <h5>{{title}}</h5>
                <p class="story-text">{{stripTags (truncate body 150)}}</p>
                <br>
                <small>Date Added: {{date}}</small>
                <div class="chip">
                    <img src="{{user.image}}" alt="Author">
                    <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/show/{{id}}" class="btn btn-gray">
                    <i class="fa fa-plus"></i> Read More
                </a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No Stories Listed</p>
    {{/each}}
</div>