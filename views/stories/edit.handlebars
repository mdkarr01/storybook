<h1>Edit Story</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}" required>
                <label for="title">Title:</label>
            </div>
        </div>


        <div class="row">
            <div class="input-field">
                <select name="status">
                    {{#select story.status}}
                    <option value="" disabled selected>Choose your option</option>
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status:</label>
            </div>
        </div>


        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.allowComments}}checked="checked"
                    {{/if}}>
                <label for="filled-in-box">Allow Comments</label>
            </p>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Add Your Post:</h5>
                <textarea class="materialize-textarea" name="body" id="textbox" required>{{story.body}}</textarea>
            </div>
        </div>

        <input type="submit" value="Save" class="btn">
    </form>
</div>